%% mdsSrc.sty

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mdsSrc}

%\RequireXeTeX

\RequirePackage{fontspec}
\RequirePackage{listings}
\RequirePackage{mdsColors}

%%
%% change ttfamily font
%%
\setmonofont[BoldFont=UbuntuMono-B.ttf]{UbuntuMono-R.ttf}

%%
%% define colors
%%
\colorlet{kwColor}{munRed}    % keyword color
\colorlet{numColor}{munGrey}  % number color
\colorlet{strColor}{munGreen} % string color

%%
%% custom source code styles
%%
\lstset{
  basicstyle=\footnotesize\ttfamily,
  commentstyle=\color{munGrey},
  numbers=left,
  numbersep=5pt,
  numberstyle=\color{numColor}\ttfamily,
  keywordstyle=\bfseries\color{kwColor},
  showspaces=false,
  showstringspaces=false,
  stringstyle=\color{strColor},
  breaklines=true,
  tabsize=2
}
%%
\endinput
